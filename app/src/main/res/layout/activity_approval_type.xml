<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="#5C6BC0"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="masco.mis.software.mascoapproval.approval.ApprovalType">

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        />

    <fragment
        android:name="masco.mis.software.mascoapproval.QuickMenuFragment"
        android:id="@+id/frag_root_quickmenu"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_quick_menu" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="50dp"

            android:orientation="vertical">


            <Button
                android:id="@+id/btn_approvaltype_pr"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/pencil_button_new"
                android:gravity="start|center"
                android:paddingLeft="10dp"
                android:text="Purchase Requisition"
                android:textColor="@android:color/white" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />


            <Button
                android:id="@+id/btn_approvaltype_sr"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/pencil_button_new"
                android:gravity="start|center"
                android:paddingLeft="10dp"
                android:text="Store Requisition"
                android:textColor="@android:color/white" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />


            <Button
                android:id="@+id/btn_approvaltype_la"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/pencil_button_new"
                android:gravity="start|center"
                android:paddingLeft="10dp"
                android:text="Leave Approval"
                android:textColor="@android:color/white" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>

