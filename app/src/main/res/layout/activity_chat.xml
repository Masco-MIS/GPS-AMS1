<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5C6BC0"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="masco.mis.software.mascoapproval.chat.ChatActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />


    <fragment
        android:id="@+id/frag_root_quickmenu"
        android:name="masco.mis.software.mascoapproval.QuickMenuFragment"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_quick_menu" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_home_chatlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:dividerHeight="3dp">

        </ListView>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_chat_newchatmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:src="@android:drawable/ic_dialog_email"

            />
    </FrameLayout>


</LinearLayout>






